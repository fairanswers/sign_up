<h1>Welcome to Joe's Organizer</h1>
<% if current_user.nil? %>
	<%= link_to new_user_session_path, class: 'login-button' do %>Sign in<% end %>
<% else %>
	Signed in as <%= current_user.email%> | <%= link_to events_path, class: 'login-button' do %>Go to App<% end %>

--------------
<% if user_signed_in? %>

  <%= link_to("User Profile - #{current_user.email}", edit_user_registration_path) %>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>

<% else %>

  <%= link_to('Register', new_user_registration_path)  %>
  <%= link_to('Login', new_user_session_path)  %>

<% end %>

<% end %>
